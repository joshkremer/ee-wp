{% extends "base.twig" %}
{% block content %}
<section class="posts_carousel">
	{#<div id="post_slider" class="owl-carousel owl-theme">#}
	<div id="post_slider">
		{% for cat_post in slider_posts %}
		{% set featured = TimberPost(cat_post) %}
		<article class="post-link overlay_{{featured.id}}" id='slide-{{featured.id}}'>
			<div class="container">
			<footer class="post-link__meta">
			{% if featured.post_type == 'ee_guides' %}
			<a class="post-link__type" href="{{site.url}}/guides/">Guides</a>
			{% elseif featured.post_type == 'ee_articles' %}
			<a class="post-link__type" href="{{site.url}}/articles/">Articles</a>
			{% endif %}
			<div class="tags tags--toggle">
			</div>
			<ul class="selector__categories">
				{% if featured.post_type == 'ee_articles' %}
				{% set cat_name =  cat_post.get_terms('articles-categories')|first %}
				{% elseif featured.post_type == 'ee_guides' %}
				{% set cat_name =  cat_post.get_terms('guides-categories')|first %}
				{% endif %}
				 {% if cat_name|default %}
					<li>
						<input type="radio" id="filter-{{cat_name|lower|replace({' ':'-'})}}" name="filter_category" value="{{cat_name}}" />
						<a data-id="{{cat_name.id}}" data-type='{{cat_name.taxonomy}}' target="_self" href="
						{% if featured.post_type == 'ee_guides' %}{{site.link}}/guides-categories/{{cat_name.slug|lower|replace({' ':'-'})}}/
						{% elseif featured.post_type == 'ee_articles' %}{{site.link}}/articles-categories/{{cat_name.slug|lower|replace({' ':'-'})}}/
						{% endif %}">
							<label for="filter-{{cat_name|lower|replace({' ':'-'})}}">
								{% if featured.post_type == 'ee_articles' %}
									<img src="{{cat_name.category_icon.url}}" />
								{% elseif featured.post_type == 'ee_guides' %}
									<img src="{{cat_name.category_icon.url}}" />
								{% endif %}
								<span>{{cat_name}}</span>
							</label>
						</a>
					</li>
				{% endif %}
			</ul>
			</footer>
		  </div>
			<div class="post-link__hover post-link__hover--lg owl-lazy" data-src="{{TimberImage(featured.featured_image).src}}">


				<div class="mobile-caption" style="display: none;">
					<footer class="banner__meta">
						{% if featured.post_type == 'ee_guides' %}
						<a class="post-link__type" href="{{site.url}}/guides/">Guides</a>
						{% elseif featured.post_type == 'ee_articles' %}
						<a class="post-link__type" href="{{site.url}}/articles/">Articles</a>
						{% endif %}
						<ul class="selector__categories">
							{% if featured.post_type == 'ee_articles' %}
							{% set cat_name =  cat_post.get_terms('articles-categories')|first %}
							{% elseif featured.post_type == 'ee_guides' %}
							{% set cat_name =  cat_post.get_terms('guides-categories')|first %}
							{% endif %}
							 {% if cat_name|default %}
								<li>
									<input type="radio" id="filter-{{cat_name|lower|replace({' ':'-'})}}" name="filter_category" value="{{cat_name}}" />
									<a data-id="{{cat_name.id}}" data-type='{{cat_name.taxonomy}}' target="_self" href="
									{% if featured.post_type == 'ee_guides' %}{{site.link}}/guides-categories/{{cat_name.slug|lower|replace({' ':'-'})}}/
									{% elseif featured.post_type == 'ee_articles' %}{{site.link}}/articles-categories/{{cat_name.slug|lower|replace({' ':'-'})}}/
									{% endif %}">
										<label for="filter-{{cat_name|lower|replace({' ':'-'})}}">
											{% if featured.post_type == 'ee_articles' %}
												<img src="{{cat_name.category_icon.url}}" class="icon" />
											{% elseif featured.post_type == 'ee_guides' %}
												<img src="{{cat_name.category_icon.url}}" class="icon" />
											{% endif %}
											<span>{{cat_name}}</span>
										</label>
									</a>
								</li>
							{% endif %}
						</ul>
					</footer>
					<div class="banner__content">
						<h1 class="banner__title">{{featured.title}}</h1>
						<div class="btns">
							<a href="{{featured.link}}">
								Read {% if featured.post_type == 'ee_guides' %}Guide{% elseif featured.post_type == 'ee_articles' %}Article{% endif %}
							</a>
							{% if featured.button_link_url %} &nbsp; 
								<a href="{{ featured.button_link_url }}">
									{% if featured.button_label %} {{ featured.button_label }} {% else %} Shop Products {% endif %}
								</a>
							{% endif %}
						</div>
					</div>
				</div>


			<div class="post-link__content hero-caption" style="display: none;">
			<h3 class="post-link__title">{{featured.title}}</h3>
			<span class="banner__title_line">
						<img src="{{ site.theme.link }}{{filePath}}/img/carousel-item-line.svg" alt="">
					</span>

				<a href="{{featured.link}}">
					Read {% if featured.post_type == 'ee_guides' %}Guide{% elseif featured.post_type == 'ee_articles' %}Article{% endif %}
				</a>

				{% if featured.button_link_url %} &nbsp; 
					<a href="{{ featured.button_link_url }}">
						{% if featured.button_label %} {{ featured.button_label }} {% else %} Shop Products {% endif %}
					</a>
				{% endif %}
			</div>
			</div>
			<style>
				.overlay_{{featured.id}} .post-link__hover:before
				{
					opacity: {{featured.custom.overlay_opacity}};
				}
			</style>
		</article>
		{% endfor %}
	</div>
</section>
<div class="container--xl post-category-box icon-filters">
	<div class="row row--16 home-category-box">
		<div class="col-sm-12 col-md-6">	
			<div class="page-title">
				<h2>
					<span>Browse Articles</span>
				</h2>
			</div>
						<ul class="selector__categories home_tab_cats article_cat">
							{% for item in articles_categories %}
							<li>
								<a href="{{site.url}}/articles-categories/{{item.slug}}/">
									<label for="filter-{{item.slug}}">
										<img src="{{articles_category_icons[loop.index0].url}}" alt="{{item.name}}" />
										<span>{{item.name}}</span>
									</label>
								</a>
							</li>
							{% endfor %}
						</ul>
		</div>
		<div class="col-sm-12 col-md-6">		
			<div class="page-title">
				<h2>
					<span>Browse Guides</span>
				</h2>
			</div>
						<ul class="selector__categories home_tab_cats guide_cat">
	                            {% for item in guides_categories %}
	                            <li>
	                                <a href="{{site.url}}/guides-categories/{{item.slug}}/"><label for="filter-{{item.slug}}">
	                                    <img src="{{guides_category_icons[loop.index0].url}}" alt="{{item.name}}" /><span>{{item.name}}</span></label>
	                                </a>
	                            </li>
	                            {% endfor %}
	                         </ul>
			</div>
		</div>
	</div>
	<section class="content pad--b-1 archive-container">
		<div class=" container--xl">
			<div class="row row--16" id="ajax-target">
				{% for cat_post in category_posts %}
					{% set featured = TimberPost(cat_post) %}
				 	{# % if loop.index >= 4 % #}
					<div class="{% if loop.index < 5 %}col-sm-6{% else %} col-sm-4{% endif %}">
						<article class="post-link overlay_{{featured.id}}" id='{{featured.id}}'>
							<a class="post-link__hover {% if loop.index < 8 %}post-link__hover--lg{% endif %} lazyload" data-bg="{{TimberImage(featured.featured_image).src|resize(720,450)}}" href="{{featured.link}}">
								<div class="post-link__content">
									<h3 class="post-link__title">{{featured.title}}</h3>
								</div>
							</a>
							<footer class="post-link__meta">
								{% if featured.post_type == 'ee_guides' %}
									<a class="post-link__type" href="{{site.url}}/guides">Guides</a>
								{% elseif featured.post_type == 'ee_articles' %}
									<a class="post-link__type" href="{{site.url}}/articles">Articles</a>
								{% endif %}
								<div class="tags tags--toggle">
									{# <button class="tags__btn">
										<svg viewBox="0 0 12 13" width="12" height="13" class="icon--hash" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
										    <use xlink:href="#icon-hash-13"></use>
										</svg>
									</button> #}
								</div>
								<ul class="selector__categories">
									{% if featured.post_type == 'ee_articles' %}
									{% set cat_name =  cat_post.get_terms('articles-categories')|first %}
									{% elseif featured.post_type == 'ee_guides' %}
									{% set cat_name =  cat_post.get_terms('guides-categories')|first %}
									{% endif %}

									{% if cat_name|default %}
										<li>
											<input type="radio" id="filter-{{cat_name|lower|replace({' ':'-'})}}" name="filter_category" value="{{cat_name}}" />
											<a data-id="{{cat_name.id}}" target="_self" href="
											{% if featured.post_type == 'ee_guides' %}{{site.link}}/guides-categories/{{cat_name.slug|lower}}/
											{% elseif featured.post_type == 'ee_articles' %}{{site.link}}/articles-categories/{{cat_name.slug|lower}}/
											{% endif %}">
												<label for="filter-{{cat_name|lower|replace({' ':'-'})}}">
													{% if featured.post_type == 'ee_articles' %}
														<img src="{{cat_name.category_icon.url}}" alt="{{cat_name}}" />
													{% elseif featured.post_type == 'ee_guides' %}
														<img src="{{cat_name.category_icon.url}}" alt="{{cat_name}}" />
													{% endif %}
													<span>{{cat_name}}</span>
												</label>
											</a>
										</li>
									{% endif %}
								</ul>
							</footer>
							{#
							<div class="tags__menu">
								<div class="tags__menu--inner">
									<p>Tagged With</p>
									<ul class="tags__list">
										{% for tag in featured.tags %}
											<li><a href="{{site.url}}/learn?tag={{tag.name}}">{{tag.name}}</a></li>
										{% endfor %}
									</ul>
									<button class="tags__close" title="Close">
										<svg viewBox="0 0 27 27" width="27" height="27" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
										    <use xlink:href="#icon-close-circle"></use>
										</svg>
									</button>
								</div>
							</div>
							#}
							<style>
							.overlay_{{featured.id}} .post-link__hover:before
							{
							opacity: {{featured.custom.overlay_opacity}};
							}
							</style>
						</article>
					</div>
				{# % endif % #}
				{% endfor %}
			</div>
		</div>
		<div class="archive-load-more load-more container container--lg">
			<a class="btn btn--black btn--ghost" data-page_type="all-articles-guides" data-offset="34" data-target="#ajax-target">Load More</a>
			<div id="content" style="display:none;"><img alt="" src="https://learn.eartheasy.com/site-files//2018/03/loading.gif" width="100" height="100" align="center" /></div>
		</div>
	</section>
	{% for item in post.get_field('home') %}
		{% if item.acf_fc_layout == 'products' and archive_products %}
			<section class="content shop-product">
				<div class=" container--xl">
					<div class="row row--16">
						<div class="page-title">
							<h2>
								<span>From Our Shop</span>
							</h2>
					 	</div>
						<div class="products_slider owl-carousel owl-theme">
							{% for product in archive_products %}
											{# {% if product.is_visible == true%} #}
								<div class="product-item">
									<a class="product-img owl-lazy" data-src="{{product.image_url}}"  href='//eartheasy.com{{product.custom_url}}'></a>
									<a href='//eartheasy.com{{product.custom_url}}'>
									<p>{{product.name}}</p>
									</a>
								</div>
											{# {% endif %} #}
							{% endfor %}
						</div>
		 			</div>
				</div>
			</section>
		{% endif  %}	
	{% endfor %}	
{% endblock %}